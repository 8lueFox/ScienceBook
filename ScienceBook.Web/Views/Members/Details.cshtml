@model ScienceBook.Web.Models.DbModels.Member

@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName + " - ScienceBook";
}
<div class="userProfile">
    <div class="info">
        <div class="profile_logo">
            @if (Model.Logo != null)
            {
                <img src="@Model.Logo" />
            }
            else
            {
                <img src='https://api.adorable.io/avatars/200/@( Model.FirstName + Model.LastName ).png'>
            }
        </div>
        <div class="profile_name">
            <div class="profile_name">
                <div class="name">
                    @Model.FirstName @Model.LastName
                </div>
                <div class="username">
                    @Model.Username
                </div>
            </div>
        </div>
        <hr style="width:70%; margin-left:15%;" />
    </div>
    <div class="data row">
        <div class="col-md-5 row mb-2">
            <div class="cloud user_info col-md-12">
                <h3>Informacje ogólne</h3>
                <div>
                    <i class="fas fa-graduation-cap"></i>
                    Studiuje kierunek o profilu:
                    <span class="respect">@Model.FieldOfStudy.Name</span>
                </div>
                <div>
                    <i class="fas fa-briefcase"></i>
                    Przewodniczący w:
                    <span class="respect">KNSI Genbit</span>
                </div>
                <div>
                    <i class="fas fa-atom"></i>
                    @if (Model.ScienceClubs.Count == 1)
                    {
                        <span>Należy do 1 koła naukowego</span>
                    }
                    else
                    {
                        <span>Należy do @Model.ScienceClubs.Count kół naukowych</span>
                    }
                </div>
            </div>
        </div>
        <div class="cloud col-md-7 mb-2"></div>
    </div>
</div>