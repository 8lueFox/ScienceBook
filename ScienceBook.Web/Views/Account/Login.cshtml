@using ScienceBook.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Zaloguj się do ScienceBook-a.";
}

<div class="row bg-own-dark" style="min-height:100vh;">
    <div class="col-sm-12 col-md-4 offset-sm-0 offset-md-4">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal mt-10", role = "form", id = "my_form" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-sm-12 text-center text-white font-weight-bold h4 mb-4">
                Zaloguj się do ScienceBook-a.
            </div>
            <div class="user-box m-0" style="width:100%;">
                <input type="text" name="Email" required="">
                <label>Email</label>
            </div>
            <div class="user-box m-0" style="width:100%;">
                <input type="password" name="Password" required="">
                <label>Hasło</label>
            </div>
            <a href="javascript:{}" onclick="document.getElementById('my_form').submit();" class="animation-link">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Zaloguj się
            </a>
            <div class="col-sm-12 text-center addons-links">
                <a href="/Account/ResetPassword">Nie pamiętasz hasła?</a> &#8226;
                <a href="/Account/Register">Zarejestuj się, aby korzystać z ScienceBook-a.</a>
            </div>
        }
    </div>
</div>