@using ScienceBook.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Zaloguj się do ScienceBook-a.";
}

<div class="row ml-0 mr-0">
    <!-- LEFT SIDE -->
    <div class="col-md-6 col-sm-12 vertical-center" id="login-page-left-side">
        <h4 class="text-white">
            <p class="pb-4"><i class="fas fa-search mr-2"></i> Obserwuj poczynania kół naukowych.<br></p>
            <p class="pb-4"><i class="fas fa-user-friends mr-2"></i>Dowiedz się o spotkaniach naukowych.<br></p>
            <p class="pb-4"><i class="far fa-comments mr-2"></i>Dołącz do rozmowy.</p>
        </h4>
    </div>
    <!-- RIGHT SIDE -->
    <div class="row col-md-6 col-sm-12 vertical-center-without-size" id="login-page-right-side">
        <div class="col-sm-12 mt-sm-5 mt-md-0">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = "LoginIndex" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="user-box">
                    <input type="text" name="Email" required="">
                    <label>Email</label>
                </div>
                <div class="user-box">
                    <input type="password" name="Password" required="">
                    <label>Password</label>
                </div>
                <div class="user-box">
                    <button class="btn btn-outline-warning btn-rounded">Zaloguj się</button>
                </div>
            }
        </div>
        <div class="col-sm-12 font-weight-bold text-white text-center" style="font-size:24px;">
            Zobacz, co się dzieje w świecie<br /> nauki w tym momencie.
        </div>
        <div class="col-sm-12 mb-sm-5 mb-md-0 text-white text-center">
            <p>Dołącz do ScienceBook-a.</p>
            <a href="/Account/Register">
                <button class="btn btn-warning btn-rounded mt-3" style="width:60%;">Zarejestruj się</button>
            </a>
            <a href="/Account/Login">
                <button class="btn btn-outline-warning btn-rounded mt-3" style="width:60%;">Zaloguj się</button>
            </a>

        </div>
    </div>
</div>

