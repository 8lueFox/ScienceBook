@model ScienceBook.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Dołącz do społeczności ScienceBook-a.";
}

<div class="row bg-own-dark" style="min-height:100vh;">
    <div class="col-sm-12 col-md-5 offset-sm-0 offset-md-4">
        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal mt-10", role = "form", id = "my_form" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-sm-12 col-md-12 text-center text-white font-weight-bold h4 mb-4">
                Dołącz do społeczności ScienceBook-a<br /> Zarejestruj się!
            </div>
            <div class="user-box m-0" style="width:100%;">
                <input type="text" name="Email" required="">
                <label>Email</label>
                <small>@Html.ValidationMessageFor(model => model.Email)</small>
            </div>
            <div class="user-box m-0" style="width:100%;">
                <input type="text" name="Username" required="">
                <label>Nazwa użytkownika</label>
                <small>@Html.ValidationMessageFor(model => model.Username)</small>
            </div>
            <div class="user-box m-0" style="width:100%;">
                <input type="text" name="FirstName" required="">
                <label>Imię</label>
                <small>@Html.ValidationMessageFor(model => model.FirstName)</small>
            </div>
            <div class="user-box m-0" style="width:100%;">
                <input type="text" name="LastName" required="">
                <label>Nazwisko</label>
                <small>@Html.ValidationMessageFor(model => model.LastName)</small>
            </div>
            <div class="user-box m-0" style="width:100%;">
                <input type="password" name="Password" required="">
                <label>Hasło</label>
                <small>@Html.ValidationMessageFor(model => model.Password)</small>
            </div>
            <div class="user-box m-0" style="width:100%;">
                <input type="password" name="ConfirmPassword" required="">
                <label>Powtórz hasło</label>
                <small>@Html.ValidationMessageFor(model => model.ConfirmPassword)</small>
            </div>
            <a href="javascript:{}" onclick="document.getElementById('my_form').submit();" class="animation-link">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Zarejestruj się
            </a>
            <div class="col-sm-12 text-center addons-links mb-5">
                <a href="/Account/Login">Masz już konto? Zaloguj się.</a>
            </div>
        }
    </div>
</div>